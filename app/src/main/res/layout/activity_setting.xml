<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:elevation="6dp"
            android:layout_height="60dp" android:id="@+id/setting_container">
        <TextView
                android:layout_marginTop="10dp"
                android:text="Setting"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tv_setting"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/lightblack"
            android:layout_height="1dp" android:id="@+id/divider_1">
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:background="#DFDFDF"
            android:orientation="vertical"
            android:layout_height="match_parent" android:id="@+id/setting_main_container">

        <LinearLayout
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/lightblack"
                android:layout_height="1dp" android:id="@+id/divider_2">
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:weightSum="2"
                android:gravity="right"
                android:layout_height="50dp" android:id="@+id/volume_up_container">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:text="Wake up with volume up button"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content" android:id="@+id/tv_volume_up"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent">
                <Switch
                        android:layout_width="50dp"
                        android:id="@+id/switch_volume_wake"
                        android:theme="@style/mswitchtheme"
                        android:layout_marginRight="16dp"
                        android:layout_height="20dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/lightblack"
                android:layout_height="1dp" android:id="@+id/divider_3">
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:weightSum="2"
                android:gravity="right"
                android:layout_height="50dp" android:id="@+id/theme_container">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:text="Dark theme"
                        android:textSize="16dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content" android:id="@+id/tv_theme"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_height="match_parent">
                <Switch
                        android:layout_width="50dp"
                        android:id="@+id/switch_theme"
                        android:theme="@style/mswitchtheme"
                        android:layout_marginRight="16dp"
                        android:layout_height="20dp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/lightblack"
                android:layout_height="1dp" android:id="@+id/divider_4">
        </LinearLayout>


    </LinearLayout>

</LinearLayout>