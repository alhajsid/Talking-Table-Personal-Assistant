<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccountActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:background="#fff"
            android:layout_height="0dp">

        <ImageView
                android:layout_width="244dp"
                android:layout_height="118dp" app:srcCompat="@mipmap/fridaylogo"
                android:id="@+id/imageView2" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:background="#212121"
            android:layout_height="0dp">


        <EditText
                android:layout_width="255dp"
                android:paddingLeft="10dp"
                android:layout_height="47dp"
                android:hint="USERNAME"
                android:theme="@style/medittexttheme"
                android:textColor="#fff"
                android:textColorHint="#B1B1B1"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextusernamesignup"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="255dp"
                android:paddingLeft="10dp"
                android:layout_height="47dp"
                android:hint="PASSWORD"
                android:theme="@style/medittexttheme"
                android:textColor="#fff"
                android:textColorHint="#B1B1B1"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextsignuppass"
                app:layout_constraintStart_toStartOf="@+id/editTextemailsignup"
                app:layout_constraintEnd_toEndOf="@+id/editTextemailsignup" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editTextemailsignup"/>
        <EditText
                android:layout_width="255dp"
                android:paddingLeft="10dp"
                android:layout_height="47dp"
                android:inputType="textEmailAddress"
                android:hint="EMAIL"
                android:theme="@style/medittexttheme"
                android:textColor="#fff"
                android:textColorHint="#B1B1B1"
                android:ems="10"
                android:id="@+id/editTextemailsignup"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextusernamesignup"
                app:layout_constraintEnd_toEndOf="@+id/editTextusernamesignup"
                app:layout_constraintStart_toStartOf="@+id/editTextusernamesignup"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="SIGN UP"
                android:layout_width="255dp"
                android:layout_height="47dp"
                android:textColor="#212121"
                android:background="#fff"
                android:id="@+id/buttonsignup" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextsignuppass"
                app:layout_constraintEnd_toEndOf="@+id/editTextsignuppass"
                app:layout_constraintStart_toStartOf="@+id/editTextsignuppass"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Already have a accounr?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewalreadyhavea"
                app:layout_constraintTop_toBottomOf="@+id/buttonsignup"
                app:layout_constraintEnd_toEndOf="@+id/buttonsignup"
                app:layout_constraintStart_toStartOf="@+id/buttonsignup" android:textColor="#BAFFFFFF"
                android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>